{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "typeRoots": ["src/types.d.ts", "./node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  